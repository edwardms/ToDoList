<%- include("header") %>

<div class="box" id="heading">
    <h1><%= listTitle %> List</h1>
</div>

<div class="box">
    <% listItems.forEach(item => { %>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" onchange="this.form.submit()" name="deleteCheckbox" value="<%= item._id %>">
            <p><%= item.name %></p>
        </div>
        <input type="hidden" name="listName" value="<%= listTitle %>">
    </form>
    <% }); %>

    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New item" autocomplete="off" autofocus="autofocus" required>
        <button type="submit" name="addButton" value=<%= listTitle %>>+</button>
    </form>
</div>

<%- include("footer") %>